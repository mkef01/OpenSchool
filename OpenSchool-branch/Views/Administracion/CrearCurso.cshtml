@model OpenSchool.Models.Cursos
@{
    ViewBag.Title = "CrearCurso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CrearCurso", "Administracion", FormMethod.Post))
{
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header d-flex align-items-center">
				<h4>Crear  Curso</h4>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label>Nombre Curso</label>
					@Html.TextBoxFor(model => model.Nombre, new { @type = "text", @Placeholder = "Nombre", @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Nivel</label>
					@Html.DropDownListFor(model => model.IdNivel, new SelectList(ViewBag.nivel, "IdNivel", "DetalleNivel"), new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Seccion</label>
					@Html.DropDownListFor(model => model.IdSeccion, new SelectList(ViewBag.seccion, "IdSeccion", "DetalleSeccion"), new { @class = "form-control" })
				</div>
				<div class="form-group">
					<input type="submit" value="Crear Curso" class="btn btn-primary">
				</div>
			</div>
		</div>
	</div>
}