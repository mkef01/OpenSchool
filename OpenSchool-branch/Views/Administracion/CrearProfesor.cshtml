@model OpenSchool.Models.Modelo_Proyecto.CrearProfesor
@{
	ViewBag.Title = "CrearProfesor";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CrearProfesor", "Administracion", FormMethod.Post))
{
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header d-flex align-items-center">
				<h4>Crear Profesor</h4>
			</div>
			<div class="card-body">
					<div class="form-group">
						<label>Nombre</label>
						@Html.TextBoxFor(model => model.Nombre, new { @type = "text", @Placeholder = "Nombre", @class = "form-control" })
					</div>
					<div class="form-group">
						<label>Apellido</label>
						@Html.TextBoxFor(model => model.Apellido, new { @type = "text", @Placeholder = "Apellido", @class = "form-control" })
					</div>
					<div class="form-group">
						<label>Email</label>
						@Html.TextBoxFor(model => model.Email, new { @type = "email", @Placeholder = "Correo Electronico", @class = "form-control" })
					</div>
					<div class="form-group">
						<label>Fecha Nacimiento</label>
						@Html.TextBoxFor(model => model.FechaNacimiento, new { @type = "date", @Placeholder = "Fecha Nacimiento", @class = "form-control" })
					</div>
					<div class="form-group">
						<input type="submit" value="Crear Pofesor" class="btn btn-primary">
					</div>
			</div>
		</div>
	</div>
}