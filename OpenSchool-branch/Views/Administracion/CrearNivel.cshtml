@model OpenSchool.Models.Modelo_Proyecto.CrearNivel
@{
	ViewBag.Title = "Crear Nivel";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CrearNivel", "Administracion", FormMethod.Post))
{
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header d-flex align-items-center">
				<h4>Crear Nivel</h4>
			</div>
			<div class="card-body">
					<div class="form-group">
						<label>Nuevo Nivel</label>
						@Html.TextBoxFor(model => model.Nivel, new { @type = "text", @Placeholder = "Nombre Nivel", @class = "form-control" })
					</div>
					<div class="form-group">
						<input type="submit" value="Crear Nivel" class="btn btn-primary">
					</div>
			</div>
		</div>
	</div>
}