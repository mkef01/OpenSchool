@model OpenSchool.Models.CoordinadorCategorias
@{
	ViewBag.Title = "AsignarCoordinador";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AsignarCoordinador", "Administracion", FormMethod.Post))
{
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header d-flex align-items-center">
				<h4>Asignar Coordinador</h4>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label>Coordinador</label>
					@Html.DropDownListFor(model => model.IdUsuario, new SelectList(ViewBag.coordinador, "IdUsuario", "Nombre"), new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Seccion</label>
					@Html.DropDownListFor(model => model.IdCategoria, new SelectList(ViewBag.categoria, "IdCategoria", "DetalleCategoria"), new { @class = "form-control" })
				</div>
				<div class="form-group">
					<input type="submit" value="Crear Curso" class="btn btn-primary">
				</div>
			</div>
		</div>
	</div>
}