@model OpenSchool.Models.Modelo_Proyecto.CrearSeccion
@{
	ViewBag.Title = "Crear Seccion";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CrearSeccion", "Administracion", FormMethod.Post))
{
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header d-flex align-items-center">
				<h4>Crear Seccion</h4>
			</div>
			<div class="card-body">
				<form>
					<div class="form-group">
						<label>Crear Seccion</label>
						@Html.TextBoxFor(model => model.Seccion, new { @type = "text", @Placeholder = "Nombre Seccion", @class = "form-control" })
					</div>
					<div class="form-group">
						<input type="submit" value="Crear Seccion" class="btn btn-primary">
					</div>
				</form>
			</div>
		</div>
	</div>
}