@model OpenSchool.Models.NivelCursos

@{
    ViewBag.Title = "Create";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            
        <h2>Crear Curso</h2>
            </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.DetalleNivel)
                @Html.TextBoxFor(model => model.DetalleNivel, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DetalleNivel)
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        }
        </div>
</div>