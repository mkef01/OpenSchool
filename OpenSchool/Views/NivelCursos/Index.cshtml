@model IEnumerable<OpenSchool.Models.NivelCursos>

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Listado de Niveles de los Cursos</h2>
        </div>
        <table class="table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DetalleNivel)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DetalleNivel)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdNivel }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdNivel }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.IdNivel })
                    </td>
                </tr>
            }
        </table>
        </div>
</div>