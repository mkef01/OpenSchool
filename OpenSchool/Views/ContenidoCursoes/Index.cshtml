@model IEnumerable<OpenSchool.Models.ContenidoCurso>

@{
    ViewBag.Title = "Index";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Cursos</h2>
            </div>
            <p>
			@Html.ActionLink("Crear Nuevo","Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Cursos.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoContenido.Tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuarios.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contenido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Archivo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaPublicacion)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cursos.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoContenido.Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuarios.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contenido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Archivo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaPublicacion)
                        </td>
                        <td>
                            @if (User.IsInRole("Profesor"))
    {
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdContenido })
                        <br />
                        @Html.ActionLink("Ver Contenido", "Details", new { id = item.IdContenido })
                        <br />
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdContenido })
}
else
{
                        @Html.ActionLink("Ver Contenido", "Details", new { id = item.IdContenido })
}
                        </td>
                    </tr>
                }

            </table>
        </div>
</div>