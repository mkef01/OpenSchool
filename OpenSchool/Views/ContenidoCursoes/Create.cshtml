@model OpenSchool.Models.Modelo_Proyecto.AgregarContenido

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "ContenidoCursoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h2>Crear</h2>
            </div>
            <hr />
            <h4>Añadir Contenido</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.IdCurso, "Curso")
                @Html.DropDownListFor(model => model.IdCurso, (IEnumerable<SelectListItem>)ViewBag.IdCurso, String.Empty, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion)
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Contenido)
                @Html.TextBoxFor(model => model.Contenido, new { @class = "form-control", type = "text" })
                @Html.ValidationMessageFor(model => model.Contenido)
            </div>
            <div class="form-group">
                @Html.Label("Archivo")
                <div>
                    <input type="file" name="file" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Texto")
                <div>
                    @Html.TextAreaFor(model => model.Texto, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Texto)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Hipervinculo")
                <div>
                    @Html.TextBoxFor(model => model.Hipervinculo, new { @class = "form-control", type = "text" })
                    <label>Es un video</label>
                    @Html.CheckBoxFor(model => model.video)
                    @Html.ValidationMessageFor(model => model.Hipervinculo)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FechaPublicacion)
                @Html.TextBoxFor(model => model.FechaPublicacion, new { @class = "form-control", type = "date", ViewBag.min, ViewBag.max, step = 1 })
                @Html.ValidationMessageFor(model => model.FechaPublicacion)
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
            </div>
        </div>
            }
            <hr />
            <div>
                @Html.ActionLink("Regresar", "Index", new { id= Model.IdCurso})
            </div>
