@model IEnumerable<OpenSchool.Models.SeccionesCursos>

@{
    ViewBag.Title = "Index";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Listado de Secciones Curso</h2>
        </div>

        <p>
            @*@Html.ActionLink("Create New", "Create")*@
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DetalleSeccion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DetalleSeccion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdSeccion }) |
