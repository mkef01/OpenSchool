@model IEnumerable<OpenSchool.Models.EvaluacionesCursos>

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Listado de Examenes</h2>
        </div>
        @if (User.IsInRole("Profesor"))
        {
            <p>
                @Html.ActionLink("Nuevo", "Create")
            </p>
        }
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Detalle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Intentos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ponderacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaFin)
                </th>
                <th></th>
            </tr>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Intentos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ponderacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaFin)
                    </td>
                    <td>
                        @if (User.IsInRole("Alumno"))
                        {
                            @Html.ActionLink("Iniciar", "Intento", new { id = item.IdEvaluacion })
                        }
                        else if (User.IsInRole("Profesor"))
                        {
                            @Html.ActionLink("Ver", "DetalleEvaluacion", new { id = item.IdEvaluacion })
                            <br />
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdEvaluacion })
                            <br />
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEvaluacion })
                        }
                    </td>
                </tr>
            }





        </table>
        </div>
    </div>
