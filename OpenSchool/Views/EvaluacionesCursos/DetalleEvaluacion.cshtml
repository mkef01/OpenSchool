        <dt>
            @Html.DisplayNameFor(model => model.Cursos.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cursos.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TiposEvaluaciones.TipoEvaluacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TiposEvaluaciones.TipoEvaluacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuarios.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuarios.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Detalle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Detalle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Intentos)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Intentos)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ponderacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ponderacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>

        <dd>
