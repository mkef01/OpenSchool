@model IEnumerable<OpenSchool.Models.IntentosEvaluacion>

@{
    ViewBag.Title = "Index";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Listado de Intentosa</h2>
        </div>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EvaluacionesCursos.Detalle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuarios.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaIntento)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EvaluacionesCursos.Detalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuarios.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaIntento)
                    </td>
                    <td>
                        @if (User.IsInRole("Profesor"))
                        {
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdIntento })
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdIntento })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdIntento })
                        }
                        else
                        {
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdIntento })
                        }

                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
