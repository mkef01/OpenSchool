@model OpenSchool.Models.ProfesoresCursos
@{
	ViewBag.Title = "AsignarProfesor";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AsignarProfesor", "Coordinador", FormMethod.Post))
{
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header d-flex align-items-center">
				<h4>Crear  Curso</h4>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label>Nombre Profesor</label>
					@Html.DropDownListFor(model => model.IdUsuario, new SelectList(ViewBag.usuarios, "IdUsuario", "Nombre"), new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Seccion</label>
					@Html.DropDownListFor(model => model.IdCursos, new SelectList(ViewBag.cursos, "IdCurso", "Nombre"), new { @class = "form-control" })
				</div>
				<div class="form-group">
					<input type="submit" value="Crear Curso" class="btn btn-primary">
				</div>
			</div>
		</div>
	</div>
}