@model OpenSchool.Models.CoordinadorCategorias

@{
    ViewBag.Title = "Asignar Coordinador";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Crear</h2>
        </div>
        <div class="form-group">
            <p></p>
            <h4>Asignar Coordinador</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.IdCategoria, "Categoria")
                @Html.DropDownListFor(model => model.IdCategoria, (IEnumerable<SelectListItem>)ViewBag.IdCategoria, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdCategoria)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Id, "Coordinador")
                @Html.DropDownListFor(model => model.Id, (IEnumerable<SelectListItem>)ViewBag.ID, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id)
            </div>

            <div class="form-group">
                <input type="submit" value="Asignar" class="btn btn-primary" />
            </div>
        </div>
        </div>
    </div>
        }

        <div>
            @Html.ActionLink("Regresar", "Index")
        </div>
