@model IEnumerable<OpenSchool.Models.CursosCategorias>

@{
    ViewBag.Title = "Index";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Listado de Curso por Categoria</h2>
        </div>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriasCursos.DetalleCategoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cursos.Nombre)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriasCursos.DetalleCategoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cursos.Nombre)
                    </td>
                    <td>
                        @if (User.IsInRole("Administrador") || User.IsInRole("Coordinador"))
    {
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdCurCate })
                    <br />
                    @Html.ActionLink("Detailes", "Details", new { id = item.IdCurCate })
                    <br />
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCurCate })
}
else
{
@Html.ActionLink("Detalles", "Details", new { id = item.IdCurCate }) })
                        }
                    </td>
                </tr>
            }

        </table>
        </div>
</div>