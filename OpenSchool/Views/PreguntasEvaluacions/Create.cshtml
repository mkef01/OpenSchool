@model OpenSchool.Models.PreguntasEvaluacion

@{
    ViewBag.Title = "Create";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Crear</h2>
        </div>

        @using (Html.BeginForm("Create", "PreguntasEvaluacions", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Preguntas Evaluacion</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.IdEvaluacion, "IdEvaluacion", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdEvaluacion", String.Empty)
                        @Html.ValidationMessageFor(model => model.IdEvaluacion)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdTipoPreg, "IdTipoPreg", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdTipoPreg", String.Empty)
                        @Html.ValidationMessageFor(model => model.IdTipoPreg)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Pregunta, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Pregunta)
                        @Html.ValidationMessageFor(model => model.Pregunta)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ponderacion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Ponderacion)
                        @Html.ValidationMessageFor(model => model.Ponderacion)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
                <a class="btn btn-success" style="min-width:20px;" href="@Url.Action("Index","EvaluacionesCursos", new { idCurso = Model.EvaluacionesCursos.IdCurso})">
                    <span class="glyphicon glyphicon-pencil"
                          aria-hidden="true">Regresar</span>
                </a>
            </div>
        }

        </div>
    </div>