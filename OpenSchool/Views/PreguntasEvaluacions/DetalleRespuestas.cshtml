@model OpenSchool.Models.PreguntasEvaluacion

@{
    ViewBag.Title = "DetalleRespuestas";
}
<div>
    <h4>Pregunta Evaluacion</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EvaluacionesCursos.IdEvaluacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EvaluacionesCursos.IdEvaluacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoPregunta.Tipo_Pregunta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoPregunta.Tipo_Pregunta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pregunta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pregunta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ponderacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ponderacion)
        </dd>

    </dl>
</div>

<div class="col-md-12">
    <div class="text-center">
        <p class="h4">Respuestas</p>
    </div>
    <div class="panel-body">
        <table id="mytable" class="table table-striped table-bordered table-list">
            <thead>
                <tr style="white-space:nowrap;">
                    @*<th class="hidden-xs">
                        @Html.DisplayNameFor(model => model.RespuestasEvaluacion.FirstOrDefault().PreguntasEvaluacion.Pregunta)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.RespuestasEvaluacion.FirstOrDefault().Respuesta)
                    </th>
                    <th class="hidden-xs">
                        @Html.DisplayNameFor(model => model.RespuestasEvaluacion.FirstOrDefault().Ponderacion)
                    </th>
                    <th class="hidden-xs">
                        @Html.DisplayNameFor(model => model.RespuestasEvaluacion.FirstOrDefault().Correcta)
                    </th>
                    <th class="hidden-xs">
                        Editar
                    </th>

            <tbody>
                @foreach (var item in Model.RespuestasEvaluacion)
                {
                    <tr>
                        @*<td class="hidden-xs">
                            @Html.DisplayFor(modelItem => item.PreguntasEvaluacion.Pregunta)
                        </td>*@
                        <td class="hidden-xs">
                            @Html.DisplayFor(modelItem => item.Respuesta)
                        </td>
                        <td class="hidden-xs">
                            @Html.DisplayFor(modelItem => item.Ponderacion)
                        </td>
                        <td class="hidden-xs">
                            @Html.DisplayFor(modelItem => item.Correcta)
                        </td>
                        <td class="hidden-xs">
                            <a class="btn btn-success" style="min-width:20px;" href="@Url.Action("Edit","RespuestasEvaluacions", new { id=item.IdRespuesta })">
                                <span class="glyphicon glyphicon-pencil"
                                      aria-hidden="true">Editar</span>
                            </a>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
<a class="btn btn-danger" style="min-width:20px;" href="@Url.Action("Create", "RespuestasEvaluacions", new { IdPregunta = Model.IdPregunta })">
    <span class="glyphicon glyphicon-plus" aria-hidden="true">Agregar</span>
</a>
