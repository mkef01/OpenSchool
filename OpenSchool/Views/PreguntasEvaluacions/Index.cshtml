@model IEnumerable<OpenSchool.Models.PreguntasEvaluacion>

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h2>Listado de Respuestas</h2>
        </div>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EvaluacionesCursos.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoPregunta.Tipo_Pregunta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pregunta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ponderacion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EvaluacionesCursos.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPregunta.Tipo_Pregunta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pregunta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ponderacion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdPregunta }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdPregunta }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPregunta })
                    </td>
                </tr>
            }

        </table>
        </div>
</div>